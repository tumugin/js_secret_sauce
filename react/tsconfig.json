    "experimentalDecorators": true,
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "@": ["src"],
      "*": ["@types/*"]
    },
    "jsx": "react"
  },
  "include": ["type/*.d.ts"]
}
